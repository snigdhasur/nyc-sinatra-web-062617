<h1>Edit your Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  
  <p>You are currently editing <%=@figure.name%></p>

  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br></br>

  <label>Title:</label>
  <select multiple name="figure[title_ids][]">
    <option value="" id="title_default">Select title</option>
    <%@titles.each do |title|%>
      <option <%="selected" if @figure.titles.include?(title) %> value="<%=title.id%>" id="<%=title.id%>"><%=title.name%></option>
  <%end%>
  </select>

  <label>or, create a new title:</label>
  <br></br>
  <label>Title name:</label>
  <input type="text" name="title[name]" id="title_name">
  <br></br>

<label>Landmark:</label>
 <select multiple name="figure[landmark_ids][]">
   <option value="" id="landmark_default">Select landmark</option>
   <%@landmarks.each do |landmark|%>
     <option <%="selected" if @figure.landmarks.include?(landmark) %> value="<%=landmark.id%>" id="<%=landmark.id%>"><%=landmark.name%></option>
 <%end%>
 </select>

<label>or, create a new landmark:</label>
<br></br>
  <label>Landmark name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">

<br></br>
  <input type="submit" value="Edit Figure">
    <br></br>
</form>